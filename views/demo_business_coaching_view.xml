<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="business_coaching_free_demo_tmpl" name="Free Demo Business Coaching">
        <t t-call="website.layout">
            <div id="wrap" class="sub-bc-cl">
                <div class="overflow-hidden-custom ">
                    <div class="row overflow-hidden-custom ">
                        <div class="col-lg-7 px-4 bg-blue-section  padding-top-section">
                            <div class="section-margin">
                                <div class="row align-items-center px-4">
                                    <div class="col-6">
                                        <a href="#!"><img class="card-img-top" src="/wt_office_hunddle/static/src/business-couching/images/logoo.png" alt="..." /></a>
                                    </div>
                                    <div class="col-6 text-white justify-content-end d-flex align-items-center mt-2"> <i class="bi bi-telephone-fill sm-h1 h4 "></i> <a class=" mx-2 text-white sm-h3 h5 text-decoration-none phone-number" href="tel:6013489977"> 601-348-997</a></div>
                                </div>

                                <div class="px-3">
                                    <h1 class="text-white  font-weight-bold heading-custom   mt-5-custom  px-4">Let's talk about your business </h1>
                                    <p class="text-white px-4  mt-5-custom   font-weight-normal paragraph-text-custom">
                                        Our Office Huddle coaching Program is design for owners and CEOs who want more-not just from their buisness, but from their life
                                    </p>
                                    <div class="d-flex justify-content-center mt-5-custom ">
                                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                            <ol class="carousel-indicators">
                                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                            </ol>
                                            <div class="carousel-inner">
                                                <div class="carousel-item active">
                                                    <img class="d-block mx-auto mt-5-custom  mw-100" src="/wt_office_hunddle/static/src/business-couching/images/cortez.png" alt="First slide"/>
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block mx-auto mt-5-custom  mw-100" src="/wt_office_hunddle/static/src/business-couching/images/oginga.png" alt="Second slide"/>
                                                </div>
                                                <div class="carousel-item">
                                                    <img class="d-block mx-auto mt-5-custom  mw-100" src="./wt_office_hunddle/static/src/business-couching/images/lemzel.png" alt="Third Slide" />
                                                </div>
                                            </div>
                                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                                <span class="carousel-control-prev-icon"></span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                                <span class="carousel-control-next-icon"></span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 padding-top-section pl-4">
                            <form class="sm-pl-5" action="/submit-business-couching">
                                <div class="row px-4">
                                    <div class="col-6">
                                        <label class="label-custom  mb-1">First Name*</label>
                                        <input type="text" required="required" name="firstname" id="firstname" class="form-control" placeholder="First name"/>
                                    </div>
                                    <div class="col-6">
                                        <label class="label-custom  mb-1">Last Name*</label>
                                        <input type="text" required="required" name="lastname" id="lastname" class="form-control" placeholder="Last name"/>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group mt-3">
                                            <label for="email" class="label-custom  mb-1">Email*</label>
                                            <input required="required" type="email" class="form-control" name="email" id="email" placeholder="info@officehuddle.com"/>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group mt-3">
                                            <label for="role" class="label-custom  mb-1">Role*</label>
                                            <select required="required" id="role" name="role" class="form-control">
                                                <option value="" selected="selected">-Please Select-</option>
                                                <option value="Owner">Owner</option>
                                                <option value="Partner / Co-Owner">Partner / Co-Owner</option>
                                                <option value="Executive">Executive</option>
                                                <option value="Employee / Other">Employee / Other</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group mt-3">
                                            <label for="business_name" class="label-custom  mb-1">Buisness Name  *</label>
                                            <input required="required" type="text" class="form-control" name="business_name" id="business_name" placeholder="Example input"/>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group mt-3">
                                            <label for="phone" class="label-custom   mb-1">What's your Phone Number  *</label>
                                            <input type="text" required="required" class="form-control" name="phone" id="phone" placeholder="Example input"/>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-group mt-3">
                                            <label for="no_of_emp" class="label-custom   mb-1">How many peoples work there  *</label>
                                            <select required="required" id="no_of_emp" name="no_of_emp" class="form-control">
                                              <option value="" selected="selected">-Please Select-</option>
                                              <option value="0-5">0-5</option>
                                              <option value="6-40">6-40</option>
                                              <option value="41-100">41-100</option>
                                              <option value="101-300">101-300</option>
                                              <option value="300+">300+</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-12">
                                        <div class="form-group mt-3">
                                            <label for="revenue" class="label-custom   mb-1">What where your revenue last year (in USD) for all your buisnesses?  *</label>
                                            <select required="required" id="revenue" class="form-control" name="revenue">
                                                <option value="" selected="selected">-Please Select-</option>
                                                <option value="0-50K"> 0-50K </option>
                                                <option value="50K-100K"> 50K-100K </option>
                                                <option value="100K-200K"> 100K-200K </option>
                                                <option value="200K-500K"> 200K-500K </option>
                                                <option value="500K-1M"> 500K-1M </option>
                                                <option value="1M-5M"> 1M-5M </option>
                                                <option value="OVER 5M"> OVER 5M </option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group mt-3">
                                            <label for="country_id" class="label-custom   mb-1">Where are you located ?  *</label>
                                            <select id="country_id" name="country_id" class="form-control">
                                                <option  required="required" selected="selected">-Please Select-</option>
                                                <t t-foreach="countries" t-as="country">
                                                    <option t-att-value="country.id"><t t-esc="country.name"/></option>
                                                </t>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group mt-3">
                                            <label for="frustration" class="label-custom  mb-1">What's your biggest buisness frustration ?  *</label>
                                            <textarea required="required" class="form-control rounded-0" id="frustration" name="frustration" rows="3"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-group mt-3">
                                            <label for="other_know" class="label-custom   mb-1">Anything else we should know ?  *</label>
                                            <textarea required="required" class="form-control rounded-0" name="other_know" id="other_know" rows="3"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <p class="mt-3 font-bold-custom">
                                            Office Huddle needs to contact information you provided to us to contact you about our products and services.you may unsubscribe from these communication at anytime . by clicking this button , you agree to office Huddle
                                            <a class="text-decoration-none" href="">Terms of Services. </a>
                                        </p>
                                        <button type="submit" class="btn button-bg w-100 btn-sm py-2 font-bold-xl-custom  h4">Request a call </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>